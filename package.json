{
  "name": "show-line-metrics",
  "displayName": "Show Line Metrics",
  "description": "VS Code line counter plugin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "configuration"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "show-line-metrics",
          "title": "Show Line Metrics",
          "icon": "assets/show-line-metrics.svg"
        }
      ]
    },
    "views": {
      "show-line-metrics": [
        {
          "id": "explorer",
          "name": "Explorer"
        },
        {
          "id": "configuration",
          "type": "webview",
          "name": "Configuration"
        }
      ]
    },
    "commands": [
      {
        "command": "add-extension",
        "category": "Configuration",
        "title": "Add Extension",
        "icon": "$(diff-review-insert)"
      },
      {
        "command": "remove-extension",
        "category": "Configuration",
        "title": "Remove Extension",
        "icon": "$(diff-review-remove)"
      },
      {
        "command": "toggle-extension",
        "category": "Configuration",
        "title": "Check/Uncheck Extension"
      },
      {
        "command": "close-configuration",
        "category": "Configuration",
        "title": "Close Configuration Panel",
        "icon": "$(diff-review-close)"
      },
      {
        "command": "open-configuration",
        "title": "Open Configuration",
        "icon": "$(debug-configure)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "open-configuration",
          "when": "view == explorer",
          "group": "navigation@0"
        },
        {
          "command": "add-extension",
          "when": "view == configuration",
          "group": "navigation@0"
        },
        {
          "command": "close-configuration",
          "when": "view == configuration",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dom-parser": "^0.1.1",
    "@types/glob": "^8.0.0",
    "@types/jsdom": "^20.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.32",
    "@vscode/webview-ui-toolkit": "^1.2.1",
    "dom-parser": "^0.1.6",
    "jsdom": "^21.0.0",
    "vscode": "^1.1.37"
  }
}
